{
  "manifest_version": 2,

  "name": "CGCookie 5.6 ReplyChecker",
  "description": "Find questions without answers",
  "icons": { "128": "icon.png" },
  "version": "0.5.1",
  "browser_action": {
    "default_title": "CGC ReplyChecker",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "utils.js",
      "prefs.js",
      "need_replies.js",
      "open_questions.js",
      "bg.js"
    ]
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "background",
    "notifications",
    "storage",
    "webRequest",
    "https://cgcookie.com/"
  ],
  "options_page": "options.html",
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  }
}
