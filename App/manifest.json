{
  "manifest_version": 2,

  "name": "CGCookie ReplyChecker",
  "description": "Find questions without answers",
  "icons": { "128": "icon.png" },
  "version": "0.22",
  "browser_action": {
    "default_title": "CGC ReplyChecker",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["bg.js"],
    "persistent": false
  },
  "permissions": [
    "webRequest",
    "https://cgcookie.com/"
  ],
  "options_page": "options.html",
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
  "permissions": [
    "activeTab"
  ]
}
